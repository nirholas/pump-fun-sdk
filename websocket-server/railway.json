{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "startCommand": "node dist/server.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 10
  },
  "envVars": {
    "PORT": { "default": "3099", "description": "HTTP/WS listen port" },
    "SOLANA_RPC_WS": { "default": "wss://api.mainnet-beta.solana.com", "description": "Solana RPC WebSocket URL" },
    "IPFS_GATEWAY": { "default": "https://cf-ipfs.com/ipfs/", "description": "IPFS gateway for metadata" }
  }
}
